<link rel="stylesheet" href='/home/debian/App_Ruby/app/views/style1.css'>

<div id="<%= dom_id club %>" class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-4">

      <img src="<%= club.image %>" class="img-fluid rounded mx-auto d-block" style="height: 350px; width: 350px; object-fit: cover;">
    </div>
    <div class="col-md-8">

      <p><strong>Name:</strong> <%= club.name %></p>
      <p><strong>City:</strong> <%= club.city %></p>
      <p><strong>Description:</strong> <%= club.description %></p>
      <p><strong>Palmares:</strong> <%= club.palmares %></p>
      <p><strong>Ranking:</strong> <%= club.ranking %></p>


      <div class="mt-3">
        <%= link_to "Players", players_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>
  </div>
</div>
