
<%= simple_form_for(@club) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :image %>
    <%= f.input :city %>
    <%= f.input :description %>
    <%= f.input :palmares %>
    <%= f.input :ranking %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
